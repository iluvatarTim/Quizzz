<UserControl x:Class="ServerWPF.UserControls.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Button Width="Auto" Margin="86,115,67,147" Style="{StaticResource ResourceKey=RoundCorner}">
        <DockPanel>
            <Image HorizontalAlignment="Left" Height="12" RenderTransformOrigin="0.5,0.5" Width="2" />
            <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center" />
        </DockPanel>
    </Button>
</UserControl>
